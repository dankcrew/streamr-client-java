LANG := en_US.UTF-8
SHELL := bash
PATH := .:$(PATH)
.SHELLFLAGS := -eu -o pipefail -c # run '/bin/bash ... -c /bin/cmd'
.DEFAULT_GOAL := build

gradle := gradlew --console plain --info --stacktrace

.PHONY: build
build:
	$(gradle) assemble -x signArchives

.PHONY: test-unit
test-unit:
	$(gradle) test

.PHONY: test-integration
test-integration:
	$(gradle) integrationTest

